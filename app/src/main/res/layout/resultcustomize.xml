<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="4dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="8dp"
            android:id="@+id/resultcardback"
            android:background="#c0fcb7">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navheaderback"
                android:id="@+id/myphoto"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Arkar Linn"
                android:layout_below="@+id/myphoto"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:id="@+id/myresultchname"/>
            <TextView
                android:id="@+id/resultshowmark"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="2    :     3"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navheaderback"
                android:id="@+id/chphoto"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Arkar Linn"
                android:layout_below="@+id/myphoto"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:id="@+id/resultchname"
                android:layout_alignParentRight="true"
                android:gravity="right"/>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>