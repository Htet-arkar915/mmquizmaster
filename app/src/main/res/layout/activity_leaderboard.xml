<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.team16.um.mmquizmaster.Navigation.Leaderboard">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/leaderboard_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:elevation="3dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
    <LinearLayout
        android:background="#2a80e6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/leader_rank"
            android:text="Rank"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/color_default"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1"/>
        <TextView
            android:layout_width="180.5dp"
            android:layout_height="match_parent"
            android:id="@+id/leader_player"
            android:text="Players"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/color_default"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leader_level"
            android:text="Level"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/color_default"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/leaderboardrecycle" />
</LinearLayout>
