<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/chfightback"
    tools:context="com.team16.um.mmquizmaster.ChFightActivity.Fighting">
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="1/5"
        android:gravity="top"
        android:layout_marginLeft="32dp"
        android:id="@+id/quesno"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_default"/>
    <ScrollView
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:overScrollMode="always"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fitsSystemWindows="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/chtvqestion"
                android:textColor="@color/color_default"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="end"
        android:id="@+id/progreelay"
        android:layout_marginRight="8dp"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto">
        <com.todddavies.components.progressbar.ProgressWheel
            android:id="@+id/pw_spinner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            ProgressWheel:pwTextColor="#222"
            ProgressWheel:pwTextSize="32dp"
            ProgressWheel:pwRimColor="@color/colorPrimary"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="@color/color_default"
            ProgressWheel:pwBarWidth="6dp"
            ProgressWheel:pwRimWidth="7dp" />

        <TextView
            android:id="@+id/tv"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/challengefightbtnback"
        android:id="@+id/chbtnans1" />
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/challengefightbtnback"
        android:id="@+id/chbtnans2"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/challengefightbtnback"
        android:id="@+id/chbtnans3"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/challengefightbtnback"
        android:id="@+id/chbtnans4"
        />
</LinearLayout>
