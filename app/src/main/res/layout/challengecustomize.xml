<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:apk="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:elevation="3dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:id="@+id/chripple_effect"
            android:layout_height="wrap_content"
            apk:mrl_rippleOverlay="true"
            apk:mrl_rippleColor="#585858"
            apk:mrl_rippleAlpha="0.2"
            android:contextClickable="true"
            card_view:mrl_rippleDelayClick="true"
            apk:mrl_rippleDelayClick="true"
            apk:mrl_rippleHover="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:transitionName="myImage"
                    android:id="@+id/chcircleimg"
                    android:src="@drawable/ic_fsstudy"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arkar Junior"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:id="@+id/chusername"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level : 0"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:layout_below="@+id/chusername"
                        android:textColor="#666666"
                        android:id="@+id/chtvlevel"/>


                    <Button
                        android:id="@+id/chbtn"
                        style="@android:style/Widget.Button"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/chusername"
                        android:background="@drawable/shadaw_effect"
                        android:text="ျပိဳင္မယ္"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/color_default"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        />
                   <!-- <RatingBar
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:stepSize="1.0"
                        android:layout_marginTop="25dp"
                        android:numStars="5"
                        android:layout_marginLeft="35dp"
                        android:id="@+id/challengerating"
                        style="?android:attr/ratingBarStyleSmall"
                        />-->
                        </RelativeLayout>


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>