<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accresultlayout"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.team16.um.mmquizmaster.ChFightActivity.AcceptResult">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fitsSystemWindows="true"
        android:id="@+id/relative3">
    <TextView
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textColor="#dcdada"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:text="You Win"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/color_default"
        android:textStyle="bold"
        android:id="@+id/winer"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="145dp"
        android:layout_below="@+id/relative3"
        android:layout_height="wrap_content"
        android:id="@+id/relative1"
        android:fitsSystemWindows="true">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/navheaderback"
        android:id="@+id/accpterimg"
        android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/markshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="60dp"
        android:layout_below="@id/relative3"
        android:layout_toRightOf="@id/relative1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:layout_below="@id/relative3"
        android:layout_toRightOf="@id/markshow">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/navheaderback"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/challengerimg"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+50 XP"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/getexperience"
        android:layout_toRightOf="@+id/xp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/relative2"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/relative2"
        android:src="@drawable/ic_firststar"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/xp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10 Coins"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/xp"
        android:layout_below="@+id/getexperience"
        android:id="@+id/getcoin"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/getexperience"
        android:src="@drawable/profilecoin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        />
    <Button
        android:id="@+id/accfinish"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/getcoin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Ok"
        android:paddingBottom="11dp"
        android:gravity="center"
        android:textSize="26dp"
        />
</RelativeLayout>
