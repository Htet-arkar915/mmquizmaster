<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soloplayback"
    tools:context="com.team16.um.mmquizmaster.Activity.EducationEx">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/solotoolbar"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/color_default"
        app:theme="@style/Toolbartheme">

    </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_width="270dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/tvqestion"
                android:textColor="@color/color_default"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/showansback"
        android:layout_marginTop="40dp"
        android:text="အေျဖမွန္"
        android:textColor="#000000"
        android:layout_gravity="end"
        android:id="@+id/showansbtn"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/default_btnback"
        android:id="@+id/btnans1" />
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_btnback"
        android:id="@+id/btnans2"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_btnback"
        android:id="@+id/btnans3"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_btnback"
        android:id="@+id/btnans4"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_next"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:id="@+id/nextbtnimg"
        />


</LinearLayout>
